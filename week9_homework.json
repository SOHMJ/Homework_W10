{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "The Correlation Between Population and COVID-19 Fatality",
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/SOHMJ/Homework/main/ne_110m.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/SOHMJ/Homework/main/COVID_Cases_Mortality_Features_By_Country.csv"
            },
            "transform": [
                {
                    "filter": "datum.Longtitude != 'nan' || datum.Latitude != 'nan'"
                }
            ],
            "mark": {
                "type": "circle",
                "tooltip": {
                    "content": "data"
                }
            },
            "encoding": {
                "longitude": {
                    "field": "Longtitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "Latitude",
                    "type": "quantitative"
                },
                "size": {
                    "field": "Population_Size",
                    "type": "quantitative",
                    "title": "Population Size",
                    "scale": {
                        "domain": [
                            712,
                            1400000000
                        ]
                    }
                },
                "color": {
                    "field": "Deaths",
                    "type": "quantitative",
                    "title": "Deaths",
                    "scale": {
                        "scheme": "reds"
                    }
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "Population_Size",
                        "type": "quantitative",
                        "title": "Population Size"
                    },
                    {
                        "field": "Deaths",
                        "type": "quantitative",
                        "title": "Deaths"
                    },
                    {
                        "field": "Lockdown_Type",
                        "type": "nominal",
                        "title": "Lockdown Type"
                    }
                ]
            }
        }
    ]
}